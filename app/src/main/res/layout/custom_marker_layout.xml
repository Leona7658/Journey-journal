<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/custom_marker_layout.xml -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/marker_background_width"
        android:layout_height="@dimen/marker_background_height"
        android:layout_gravity="center"
        android:src="@drawable/marker_background" />

    <ImageView
        android:id="@+id/marker_image"
        android:layout_width="@dimen/marker_image_width"
        android:layout_height="@dimen/marker_image_height"
        android:paddingBottom="14dp"
        android:layout_gravity="center" />

</FrameLayout>